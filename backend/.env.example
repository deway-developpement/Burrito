JWT_SECRET=random-string-value # Secret key for JWT
JWT_EXPIRES_IN=30min # Token expiration time
JWT_REFRESH_EXPIRES_IN=30d # Token refresh expiration time
DATABASE_USERNAME=db-user # Database username
DATABASE_PASSWORD=db-password # Database password
DATABASE_NAME=burrito # Database name
MONGODB_CONTAINER_NAME=burrito-mongo # MongoDB container name
MONGODB_PORT=27017 # MongoDB port
MONGODB_MODE=docker # Options: localhost, docker
REDIS_HOST=localhost # Redis host
REDIS_PORT=6379 # Redis port
MAILHOG_CONTAINER_NAME=burrito-mailhog # MailHog container name
MAILHOG_SMTP_PORT=1025 # MailHog SMTP port
MAILHOG_WEB_PORT=8025 # MailHog web UI port
SMTP_HOST=mailhog # SMTP host (MailHog for local)
SMTP_PORT=1025 # SMTP port (MailHog for local)
SMTP_USER= # SMTP username
SMTP_PASS= # SMTP password
SMTP_FROM=no-reply@example.com # From address
NOTIFICATIONS_QUEUE_ENABLED=true # Enable BullMQ worker
NOTIFICATIONS_RETRY_ATTEMPTS=5 # Queue retry attempts
NOTIFICATIONS_BACKOFF_MS=1000 # Queue backoff ms
NOTIFICATIONS_DIRECT_RETRY_ATTEMPTS=2 # Direct send retry attempts
NOTIFICATIONS_REMINDER_ONLY_PENDING=true # Reminders only for pending recipients
WEB_APP_URL=http://localhost:3000 # Web app base URL
EMAIL_VERIFICATION_URL_BASE=http://localhost:3000/verify-email # Email verification base URL
EMAIL_VERIFICATION_TTL_HOURS=24 # Email verification token TTL
